<?xml version='1.0' encoding='utf-8'?>
	<widget xmlns = "http://www.w3.org/ns/widgets"
		xmlns:gap = "http://phonegap.com/ns/1.0"
		id        = "com.hoffman-international.hoffman-app"
		versionCode = "1.0.3"
		version   = "1.0">

	
		<gap:config-file platform="ios" parent="CFBundleVersion">
            <string>3</string>
        </gap:config-file>
        <gap:config-file platform="ios" parent="CFBundleShortVersionString">
    		<string>1.0</string>
		</gap:config-file>


		<name>Hoffman App</name>
		<description>
			Hoffman Process mobile application.
		</description>
		<author href="http://phonegap.com" email="support@phonegap.com">
			DavidLuthiers
		</author>
		<preference name="phonegap-version" value="cli-6.1.0" />
		<preference name="orientation" value="portrait" />
		<preference name="fullscreen" value="false" />
		<preference name="target-device" value="universal" />
		<preference name="webviewbounce" value="true" />
		<preference name="prerendered-icon" value="true" />
		<preference name="stay-in-webview" value="true" />
		<preference name="ios-statusbarstyle" value="default" />
		<preference name="detect-data-types" value="true" />
		<preference name="exit-on-suspend" value="false" />
		<preference name="show-splash-screen-spinner" value="true" />
		<preference name="auto-hide-splash-screen" value="true" />
		<preference name="EnableViewportScale" value="true" />
		<preference name="MediaPlaybackRequiresUserAction" value="false" />
		<preference name="AllowInlineMediaPlayback" value="false" />
		<preference name="BackupWebStorage" value="cloud" />
		<preference name="TopActivityIndicator" value="gray" />
		<preference name="KeyboardDisplayRequiresUserAction" value="false" />
		<preference name="HideKeyboardFormAccessoryBar" value="false" />
		<preference name="SuppressesIncrementalRendering" value="false" />

		<preference name="android-installLocation" value="internalOnly" />
		<preference name="ErrorUrl" value=""/>
		<preference name="BackgroundColor" value="0x000000"/>
		<preference name="KeepRunning" value="true"/>
		<preference name="DisallowOverscroll" value="true"/>
		<preference name="LoadingDialog" value=","/> 
		<preference name="LoadUrlTimeoutValue" value="20000" />
		<preference name="disable-cursor" value="false" />
		<preference name="android-build-tool" value="gradle" />
		<preference name="SplashShowOnlyFirstTime" value="false" />
		
		
		<icon src="icon.png" />
		<icon src="icons/ios/29.png"   gap:platform="ios"          width="29" height="29" />
		<icon src="icons/ios/40.png"   gap:platform="ios"          width="40" height="40" />
		<icon src="icons/ios/50.png"   gap:platform="ios"          width="50" height="50" />
		<icon src="icons/ios/57.png"   gap:platform="ios"          width="57" height="57" />
		<icon src="icons/ios/58.png"   gap:platform="ios"          width="58" height="58" />
		<icon src="icons/ios/60.png"   gap:platform="ios"          width="60" height="60" />
		<icon src="icons/ios/72.png"   gap:platform="ios"          width="72" height="72" />
		<icon src="icons/ios/76.png"   gap:platform="ios"          width="76" height="76" />
		<icon src="icons/ios/80.png"   gap:platform="ios"          width="80" height="80" />
		<icon src="icons/ios/100.png"  gap:platform="ios"          width="100" height="100" />
		<icon src="icons/ios/114.png"  gap:platform="ios"          width="114" height="114" />
		<icon src="icons/ios/120.png"  gap:platform="ios"          width="120" height="120" />
		<icon src="icons/ios/144.png"  gap:platform="ios"          width="144" height="144" />
		<icon src="icons/ios/152.png"  gap:platform="ios"          width="152" height="152" />
		<icon src="icons/android/36.png"   gap:platform="android"      gap:qualifier="ldpi" />
		<icon src="icons/android/48.png"   gap:platform="android"      gap:qualifier="mdpi" />
		<icon src="icons/android/72.png"   gap:platform="android"      gap:qualifier="hdpi" />
		<icon src="icons/android/96.png"   gap:platform="android"      gap:qualifier="xhdpi" />
		<gap:splash src="splash/ios/Default.png"       gap:platform="ios"     width="320" height="480" />
		<gap:splash src="splash/ios/Default@2x.png"       gap:platform="ios"     width="640" height="960" />
		<gap:splash src="splash/ios/Default-568h@2x.png"      gap:platform="ios"     width="640" height="1136" /> 

		<gap:plugin name="cordova-plugin-whitelist" source="npm" />
		<gap:plugin name="org.apache.cordova.camera"  />
		<gap:plugin name="org.apache.cordova.media"  />
		<gap:plugin name="org.apache.cordova.dialogs" />
		<gap:plugin name="org.apache.cordova.device-motion"  />
		<gap:plugin name="org.apache.cordova.globalization"  />
		<gap:plugin name="org.apache.cordova.device"  />
		<gap:plugin name="org.apache.cordova.vibration"  />
		<gap:plugin name="cordova-plugin-screen-orientation" source="npm"/>
		<gap:plugin name="org.apache.cordova.file-transfer"  />
		<gap:plugin name="org.apache.cordova.file" />
		<gap:plugin name="org.apache.cordova.inappbrowser" />
		<gap:plugin name="hu.dpal.phonegap.plugins.spinnerdialog" />
		<gap:plugin name="net.yoik.cordova.plugins.screenorientation" />
		<gap:plugin name="com.jchalan.cordova.ios.disableshaketoundo" />
		<gap:plugin name="org.apache.cordova.network-information" />
		<gap:plugin name="nl.x-services.plugins.insomnia" source="npm"/>
		<gap:plugin name="org.apache.cordova.splashscreen" />
		<gap:plugin name="nl.x-services.plugins.backgroundaudio" />
		<gap:config-file platform="ios" parent="UIStatusBarHidden">
			<true/>
		</gap:config-file>
		<gap:config-file platform="ios" parent="UIViewControllerBasedStatusBarAppearance">
			<false/>
		</gap:config-file>
		
		<!--<gap:plugin name="nl.x-services.plugins.socialsharing" />-->
		<plugin spec="https://github.com/EddyVerbruggen/SocialSharing-PhoneGap-Plugin.git" />
		<!--<gap:plugin name="de.appplant.cordova.plugin.local-notification" />-->
		<plugin spec="https://github.com/katzer/cordova-plugin-local-notifications.git" />

		<gap:splash src="splash.png" />
		
		<gap:config-file platform="ios" parent="UIStatusBarHidden">
			<true/>
		</gap:config-file>

		<gap:config-file platform="ios" parent="UIViewControllerBasedStatusBarAppearance">
			<false/>
		</gap:config-file>

		
		<preference name="SplashScreenDelay" value="15000" />
		
		<allow-navigation href="http://*/*" />
		<allow-intent href="https://*/*" />
		
		
	</widget>
